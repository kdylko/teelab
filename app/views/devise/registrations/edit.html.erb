<br>
<div class="row collapse">
  <div class="medium-3 columns">
    <ul class="tabs vertical" id="example-vert-tabs" data-tabs>
      <li class="tabs-title is-active"><a href="#panel1v" aria-selected="true">Личные данные</a></li>
      <li class="tabs-title"><a href="#panel2v">Кампании</a></li>

    </ul>
    </div>
    <div class="medium-9 columns">
    <div class="tabs-content vertical" data-tabs-content="example-vert-tabs">
      <div class="tabs-panel is-active small-10 medium-8 large-8 form-container" id="panel1v">
         <h3>Личный кабинет</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :Пароль %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="field">
                <%= f.label :'Подтвердите пароль' %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>

              <div class="field">
                <%= f.label :'Введите текущий пароль' %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "off" %>
              </div>

              <div class="actions">
                <%= f.submit "Update" %>
              </div>
            <% end %>
              <h3>Cancel my account</h3>

              <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

              <%= link_to "Back", :back %>   
      </div>

      <div class="tabs-panel" id="panel2v">
            <h3>Созданные кампании</h3>
              <div class="row">
              <% @user.products.each do |product| %>
              <div class="callout" data-closable>
                  <tr>
                    <td><%= product.title %></td>
                    <td><%= product.description %></td>
                    <td><%= product.url_name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.item_count %></td>
                    <td><%= link_to 'Show', user_product_path(product.user_id,product) %></td>
                    <td><%= link_to 'Edit', edit_user_product_path(product.user_id,product) %></td>
                  </tr>
                <button class="close-button" aria-label="Close alert" type="button">
                  
                  <span aria-hidden="true"><%= link_to '&times;'.html_safe, user_product_path(@user, product), :method => :delete %></span>
                  </button>
              </div>
              <% end %> 
            </div>  
              <h3>Создать новую кампании</h3>           
              <div class="actions">
                <%= button_to 'Создать кампанию', new_user_product_path(user_id: current_user.id), :method => :get, class: "button expand add-to-cart" %> 
              </div>
              
      </div>

    </div>
  </div>
</div>


     

    
    



    

 





