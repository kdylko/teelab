<% content_for :title, "Регистрация" %>


    <section id="content">

      <div class="content-wrap nopadding">

        <div class="section nopadding nomargin" style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('images/parallax/home/1.jpg') center center no-repeat; background-size: cover;"></div>

        <div class="section nobg full-screen nopadding nomargin">
          <div class="container vertical-middle divcenter clearfix">

            <div class="row center">

            </div>

            <div class="panel panel-default divcenter noradius noborder" style="max-width: 575px; background-color: rgba(255,255,255,0.93);">
              <div class="panel-body" style="padding: 40px;">

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "login-form", class: "nobottommargin") do |f| %>
                <div class="accordion accordion-lg divcenter nobottommargin clearfix" style="max-width: 550px;">
                <div class="acctitle"><i class="acc-closed icon-user4"></i><i class="acc-open icon-user4"></i>Регистрация </div>
                <div class="acc_content clearfix">
                 <div class="col_full"><label for="register-form-name">Email:</label> 
                                <%= f.email_field :email, autofocus: true, placeholder: "", id: "login-form-username", class: "form-control not-dark" %></div> 
                                <div class="col_full"><label for="register-form-name">Пароль:</label>
                                <%= f.password_field :password, autocomplete: "off", placeholder: "", id: " login-form-password", class: "form-control not-dark" %></div>
                       <div class="col_full"><label for="register-form-name">Подтвердить пароль:</label> 
                  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: " ", id: "login-form-password", class: "form-control not-dark" %></div>

                  <div class="col_full nobottommargin"><%= f.submit "Регистрация", id: "login-form-submit", class: "button button-3d button-black nomargin" %></div>
                    </div>
                  </div>
                <% end %>

                
            </div>

          </div>
        </div>

      </div>

    </section><!-- #content end -->
