    <!-- Header
    ============================================= -->
    <header id="header" class="full-header">

      <div id="header-wrap">

        <div class="container clearfix">

          <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

          <!-- Logo
          ============================================= -->
          <div id="logo">
            <%= link_to root_path, class: "standard-logo" do %><%= image_tag 'logo_n.png', alt: "Canvas Logo" %><% end %>
            <%= link_to root_path, class: "retina-logo" do %><%= image_tag 'logo@2x.png', alt: "Canvas Logo" %><% end %>
          </div><!-- #logo end -->

          <!-- Primary Navigation
          ============================================= -->
          <nav id="primary-menu">

            <ul>
              <li><%=link_to root_path do %><div>Главная</div><% end %>
              </li>
              <li><%=link_to support_aboutus_path do %><div>О нас</div><% end %>
              </li>
 
                <%if signed_in?%>
                  <li class="mega-menu"><%=link_to current_user.try(:email), edit_user_registration_path%></li>
                  <li class="mega-menu"><%=link_to "Выйти", destroy_user_session_path, method: :delete%></li>
                <%else%>
                  <li class="mega-menu"><%=link_to "Регистрация", new_user_registration_path%></li>
                  <li class="mega-menu"><%=link_to "Войти", new_user_session_path%></li>
                <%end%>
              
            </ul>

            <!-- Top Cart
            ============================================= -->
            <div id="top-cart">
              <a id="top-cart-trigger"  style="cursor: pointer;"><i class="icon-shopping-cart"></i><span id="cart_count"><%=@cart.total_count%></span></a>
              <div class="top-cart-content">
                <div class="top-cart-title">
                  <h4>Корзина Заказов</h4>
                </div>
                <div class="top-cart-items" id="cart-items">
                 <% @cart.line_items.each do |line_item| %>
                  <div class="top-cart-item clearfix">

                    <div class="top-cart-item-image">
                      <a href="#"><%= image_tag line_item.product.images.first.photo(:thumb) %></a>
                    </div>
                    
                    <div class="top-cart-item-desc">
                      <a href="#"><%= line_item.product.title %></a>
                      <span class="top-cart-item-price"><%= line_item.size.name %><br><%= line_item.total_price %> руб.</span>
                      <span class="top-cart-item-quantity">x <%= line_item.total_count %><br><br><%= link_to line_item_path(line_item.id), :method => :delete,  remote:true, class: "remove" do %><i class="icon-trash2"></i><% end %></span>
                    </div>

                  </div>
                   <% end %> 
                </div>
                <div class="top-cart-action clearfix">
                  <span class="fleft top-checkout-price" id="cart-total"><%= @cart.total_price %> руб.</span>
                  <%= link_to new_order_path, class: "button button-3d button-small nomargin fright" do %>Оформить <% end %>
                </div>
              </div>
            </div><!-- #top-cart end -->

            <!-- Top Search
            ============================================= -->
            <div id="top-search">
              <a href="#" id="top-search-trigger"><i class="icon-search3"></i><i class="icon-line-cross"></i></a>
              <form action="search.html" method="get">
                <input type="text" name="q" class="form-control" value="" placeholder="Type &amp; Hit Enter..">
              </form>
            </div><!-- #top-search end -->

          </nav><!-- #primary-menu end -->

        </div>

      </div>

    </header><!-- #header end -->    




 




 