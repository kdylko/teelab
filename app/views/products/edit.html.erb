<div class="row">
<div class="medium-9 columns">
  <h1>Изменить данные кампании</h1>

  <%= form_for [@user, @product], url: user_product_path(@product.user_id, @product), html: { multipart: true } do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :Назване %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :Описание %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :Url %><br>
      <%= f.text_field :url_name %>
    </div>
    <div class="field">
      <%= f.label :Цена %><br>
      <%= f.text_field :price %>
    </div>
      <%= f.label 'Ваш username в инстаграм (для того чтобы было видно что Вы создали дизайн)' %>
      <%= f.text_field :instagram_name %>
    </div>
    <div class="field">
      <%= f.label :Фото %><br>
      <%= file_field_tag "photos[]", type: :file, multiple: true %>
    </div>
    

    <div class="actions">

      <%= f.submit :Изменить %>
    </div>
  <% end %>

  <div class="row">
  <% @product.images.each do |image| %>
  	<div class="callout" data-closable>
  		<%= image_tag image.photo(:thumb) %>
  		<button class="close-button" aria-label="Close alert" type="button">
  			
  			<span aria-hidden="true"><%= link_to '&times;'.html_safe, image_path(image.id), :method => :delete %></span>
  	    </button>
  	</div>
  <% end %>
  </div>

  <br>
  <br>
</div>
</div>